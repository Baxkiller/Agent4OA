# API配置
OPENAI_API_KEY=your_dashscope_api_key_here

# 数据库配置（如果需要）
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=content_detection

# 日志配置
LOG_LEVEL=INFO

# 服务配置
HOST=0.0.0.0
PORT=8000

# 模型配置
DEFAULT_MODEL=qwen-vl-max-2025-04-08
# 可选: qwen-vl-max-2025-04-08

# 检测阈值配置
FAKE_NEWS_THRESHOLD=0.7
TOXIC_CONTENT_THRESHOLD=0.7
PRIVACY_LEAK_THRESHOLD=0.6

# 文件上传配置
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads

# 缓存配置
ENABLE_CACHE=true
CACHE_TTL=3600  # 1小时 

ALIBABA_CLOUD_ACCESS_KEY_ID=xxxxxxxxxxxxx
ALIBABA_CLOUD_ACCESS_KEY_SECRET=XXXXXXXXxxxxxxXXX
ALIBABA_CLOUD_APP_KEY=XXXXxxxxXXX